version: '3.8'

services:
  ollama:
    container_name: ollama
    image: ollama/ollama
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              capabilities: ["gpu"]
              count: all
    environment:
      OLLAMA_TIMEOUT: 60
    volumes:
      - ollama:/root/.ollama
    restart: always

volumes:
  ollama:
